{
  "name": "@quickclick/desktop",
  "version": "1.0.2",
  "description": "QuickClick MediaTools - Desktop Edition",
  "main": "dist/main/index.js",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "compile:shared": "tsc -p tsconfig.shared.json",
    "build": "npm run compile:shared && tsc && vite build && electron-builder",
    "build:win": "npm run compile:shared && tsc && vite build && electron-builder --win",
    "build:mac": "npm run compile:shared && tsc && vite build && electron-builder --mac",
    "preview": "vite preview",
    "icons": "node scripts/generate-icons.js"
  },
  "dependencies": {
    "electron-log": "^5.1.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "exceljs": "^4.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.24",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "28.3.3",
    "electron-builder": "^24.13.3",
    "electron-icon-builder": "^2.0.1",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.34.4",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.quickclick.mediatools",
    "productName": "QuickClick MediaTools",
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "files": [
      "dist/**/*",
      "resources/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "lucusdato",
      "repo": "ShortStaffed-Media-Suite"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icons/win/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "resources/icons/mac/icon.icns",
      "category": "public.app-category.productivity"
    },
    "extraResources": [
      {
        "from": "resources/templates",
        "to": "templates"
      }
    ]
  }
}
