{
  "name": "quickclick-mediatools",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace=packages/web",
    "dev:desktop": "npm run dev --workspace=packages/desktop",
    "build:web": "npm run build --workspace=packages/web",
    "build:desktop": "npm run build --workspace=packages/desktop",
    "build:desktop:win": "npm run build:win --workspace=packages/desktop",
    "build:desktop:mac": "npm run build:mac --workspace=packages/desktop"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
